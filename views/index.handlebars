<h1 class="jumbotron" id="title">Eat-Da-Burger <img id="burgerPic" src="/assets/images/burger.jpg"
        alt="Burger Pic" width="100px" height="100px"></h1>
<div class="container">
    <div class="burgers">
        <h3 class="burgers-title">Burgers</h3>
        <ul>
            {{#each burgers}}
            {{#unless this.devoured}}
            <li class="list-of-burgers rounded">{{this.burger_name}} <button id="devourBtn" class="devourBtn btn-primary rounded"
                    data-id="{{this.id}}">Devour</button></li>
            {{/unless}}
            {{/each}}
        </ul>
    </div>
    <div class="burgers">
        <h3 class="burgers-title">Devoured Burgers</h3>
        <ul>
            {{#each burgers}}
            {{#if this.devoured}}
            <li class="list-of-eaten-burgers">{{this.burger_name}}<button id="deleteBtn" class="deleteBtn btn-danger rounded"
                    data-id="{{this.id}}">Delete</button></li>
            {{/if}}
            {{/each}}
        </ul>
    </div>
    <div>
    <form class="createBurger" id="burgerEntry">
        <div class="form-group">
            <textarea class="rounded"  rows="2" cols="50" type="text" id="burgerName" name="name"></textarea>
            <hr>
            <button id="submit" class="btn-info rounded">Add a meaty Burger</button>
            <p><strong>* * Enter the Burger hour to Devour! * * </strong></p>
        </div>
    </form>
    </div>
</div>